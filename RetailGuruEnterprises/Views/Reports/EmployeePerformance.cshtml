@model IEnumerable<DatabaseAccess.EmployeePerformance>

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery") <!-- Ensure jQuery is loaded here -->
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#printButton").on("click", function () {
                window.print();
            });
        });
    </script>
</head>
<body>
    <div class="container body-content">
        <button id="printButton" class="btn btn-primary">Print this page</button>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ReviewDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalesVolume)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfitVolume)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerSatisfactionScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ItemsSoldToday)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PeerReviewScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeTable.Name)
                    </th>
                    <th>
                        Performance Score
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var performanceScore = (item.SalesVolume + item.ProfitVolume + item.CustomerSatisfactionScore + item.ItemsSoldToday + item.PeerReviewScore) / 5m;
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReviewDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesVolume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProfitVolume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerSatisfactionScore)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemsSoldToday)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PeerReviewScore)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeTable.Name)
                        </td>
                        <td>
                            @performanceScore
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
