@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Login</title>
    <link href="~/content/Admin_Template/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/content/Admin_Template/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-5 col-md-5">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Forgot Password?</h1>
                            </div>
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                            }
                            @using (Html.BeginForm("RequestOtp", "Home", FormMethod.Post, new { @class = "form-horizontal user", role = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="email" name="email" placeholder="Enter your email...">
                                </div>

                                <input type="submit" value="Send OTP" class="btn btn-primary btn-user btn-block" />
                                <hr>
                            }
                            @using (Html.BeginForm("VerifyOtp", "Home", FormMethod.Post, new { @class = "form-horizontal user", role = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="otp" name="otp" placeholder="Enter OTP...">
                                </div>

                                <input type="submit" value="Verify OTP" class="btn btn-primary btn-user btn-block" />
                                <hr>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/content/Admin_Template/vendor/jquery/jquery.min.js"></script>
    <script src="~/content/Admin_Template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/content/Admin_Template/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/content/Admin_Template/js/sb-admin-2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var message = '@TempData["Message"]';
            if (message) {
                toastr.success(message);
            }

            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                toastr.error(errorMessage);
            }

         
        });
    </script>
</body>
</html>
